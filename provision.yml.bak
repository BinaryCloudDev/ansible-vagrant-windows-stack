---
- hosts: mgmt1,vpn1
  sudo: yes
  user: vagrant 
  roles:
   - linuxcommon

- hosts: vpn1
  sudo: yes
  user: vagrant
  roles:
   - strongswan
   - role: l2tp
     when: ipsec_enable_l2tp
   - nat

- hosts: dc1
  roles:
   - rdc
   - intnet
   - dhcp

- hosts: dc2
  roles: 
   - intnet
   - indomain
   - dc

- hosts: wsus
  roles: 
   - intnet
   - indomain
   - wsus
